#!/bin/sh

. $HOME/.config/admiral.d/config

# Panel 
PW=210
PH=58
PX=1150
PY=36
#n30f -d -x 1170 -y 36 $HOME/.config/admiral.d/popups/power/bg.png &


echo " %{F$RED}%{F-} %{A:s:}Shutdown%{A} %{F$GREEN} %{F-}%{A:l:}Lock%{A} %{F$BLUE} %{F-}%{A:e:}Exit%{A}" | lemonbar -g ${PW}x${PH}+${PX}+${PY} -f "$FONT1" -f "$FONT2" -B "#ff282828" -F "#ffebdbb2" -dp | \
    while :; do
        read line
        case $line in 
            'e')
                p=$(pgrep -n lemonbar)
                n=$(pgrep -n n30f)
                kill $n
                kill $p 
                exit 
                ;;
            'l')
                i3lock-fancy &
                p=$(pgrep -n lemonbar)
                n=$(pgrep -n n30f)
                kill $n
                kill $p 
                exit                
                ;;
            's')
                sudo /sbin/shutdown -h now
                exit
                ;;
        esac
    done
